{
	"name": "graphql-query-parser",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/msleevi/graphql-query-parser.git"
	},
	"version": "0.0.2",
	"description": "A utility for parsing queries out of GraphQL files",
	"type": "module",
	"main": "./dist/cjs/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/esm/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/esm/index.d.ts",
				"default": "./dist/esm/index.js"
			},
			"require": {
				"types": "./dist/cjs/index.d.ts",
				"default": "./dist/cjs/index.js"
			}
		}
	},
	"files": [
		"dist"
	],
	"engines": {
		"node": ">=18.0.0"
	},
	"scripts": {
		"build": "npm run clean && npm run build:compile",
		"build:compile": "npm run build:esm",
		"build:esm": "tsc --project tsconfig.json",
		"build:cjs": "tsc --project tsconfig.cjs.json",
		"build:cjs-package": "echo '{\"type\": \"commonjs\"}' > dist/cjs/package.json",
		"build:dependency": "depcruise --exclude \"^node_modules\" --output-type dot lib | dot -T svg > dependencygraph.svg",
		"clean": "rm -rf dist",
		"lint": "prettier --check . && eslint .",
		"lint:fix": "prettier --write . && eslint . --fix",
		"coverage": "c8 --reporter=lcov --reporter=text node --import tsx --test tests/**/*-test.ts",
		"test": "node --import tsx --test tests/**/*-test.ts",
		"unit": "node --import tsx --test tests/unit/**/*-test.ts",
		"integration": "node --import tsx --test tests/integration/**/*-test.ts"
	},
	"keywords": [
		"graphql",
		"parse",
		"query"
	],
	"author": "Mikey Sleevi <development@frogman.simplelogin.com>",
	"license": "MIT",
	"devDependencies": {
		"@eslint/js": "^9.19.0",
		"@tsconfig/recommended": "^1.0.13",
		"@types/node": "^24.0.0",
		"c8": "^10.1.3",
		"dependency-cruiser": "^17.0.0",
		"eslint": "^9.19.0",
		"eslint-plugin-perfectionist": "^5.5.0",
		"globals": "^17.0.0",
		"prettier": "^3.8.1",
		"tsx": "^4.21.0",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.22.0"
	},
	"bugs": {
		"url": "https://github.com/msleevi/graphql-query-parser/issues"
	},
	"homepage": "https://github.com/msleevi/graphql-query-parser#readme"
}
